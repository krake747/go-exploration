{
    "devDependencies": {
        "prettier": "^3.0.3",
        "prettier-plugin-tailwindcss": "^0.5.6",
        "tailwindcss": "^3.3.5"
    },
    "scripts": {
        "css:build": "npx tailwindcss -i ./wwwroot/css/main.css -o ./wwwroot/css/tailwindcss.min.css",
        "css:watch": "npx tailwindcss -i ./wwwroot/css/main.css -o ./wwwroot/css/tailwindcss.min.css --watch",
        "css:release": "npx tailwindcss -i ./wwwroot/css/main.css -o ./wwwroot/css/tailwindcss.min.css --minify"
    }
}
